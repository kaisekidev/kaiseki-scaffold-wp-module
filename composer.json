{
  "name": "kaiseki/scaffold-wp-module",
  "type": "project",
  "description": "Scaffold a kaiseki module",
  "keywords": [
    "wordpress",
    "module"
  ],
  "license": "proprietary",
  "homepage": "https://github.com/kaisekidev/scaffold-wp-module",
  "authors": [
    {
      "name": "Kaiseki",
      "email": "hello@kaiseki.dev",
      "homepage": "https://www.kaiseki.dev",
      "role": "Organization"
    }
  ],
  "support": {
    "issues": "https://github.com/kaisekidev/scaffold-wp-module/issues",
    "source": "https://github.com/kaisekidev/scaffold-wp-module"
  },
  "require": {
    "php": "^8.1",
    "symfony/console": "^7.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.21",
    "kaiseki/php-coding-standard": "dev-master",
    "laminas/laminas-filter": "^2.34",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^1.2",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpstan/phpstan-strict-rules": "^1.1",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "Kaiseki\\ScaffoldModule\\": "src"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true,
      "roots/wordpress-core-installer": true
    },
    "process-timeout": 0
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*"
      ]
    }
  ],
  "minimum-stability": "stable",
  "extra": {
    "wordpress-install-dir": "vendor/wordpress/wordpress",
    "installer-paths": {
      "vendor/wordpress/plugins/{$name}/": ["type:wordpress-plugin"]
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php bin/console app:setup-module",
      "@composer update"
    ],
    "check": [
      "@cs-check",
      "@phpstan",
      "@phpunit"
    ],
    "cs-check": "php-cs-fixer fix --dry-run",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes",
    "phpstan": "phpstan analyse --memory-limit 1G",
    "phpunit": "phpunit",
    "test": "Kaiseki\\ScaffoldModule\\SetupModuleCommand"
  }
}
