{
  "name": "kaiseki/%package_name_dash%",
  "type": "library",
  "description": "",
  "license": "MIT",
  "homepage": "%repo_url%",
  "authors": [
    {
      "name": "Kaiseki",
      "email": "hello@kaiseki.dev",
      "homepage": "https://www.kaiseki.dev",
      "role": "Organization"
    }
  ],
  "support": {
    "issues": "%repo_url%/issues",
    "source": "%repo_url%"
  },
  "require": {
    "php": ">=8.2",
    "psr/container": "^1.1 || ^2.0"
  },
  "require-dev": {
    "bnf/phpstan-psr-container": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.21",
    "kaiseki/php-coding-standard": "dev-master",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^1.2",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpstan/phpstan-strict-rules": "^1.1",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Kaiseki\\%namespace_escaped%\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kaiseki\\Test\\Functional\\%namespace_escaped%\\": "tests/functional",
      "Kaiseki\\Test\\Unit\\%namespace_escaped%\\": "tests/unit"
    }
  },
  "repositories": [],
  "minimum-stability": "stable",
  "scripts": {
    "check": [
      "@cs-check",
      "@phpstan",
      "@phpunit"
    ],
    "cs-check": "php-cs-fixer fix --dry-run",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes",
    "phpstan": "phpstan analyse --memory-limit 1G",
    "phpunit": "phpunit"
  }
}
